  <div class="nav-links">
      <ul>
        {% for link in linklists[section.settings.main_linklist].links %}
        <li> <a href= "{{link.url}}">{{link.title}}</a></li>
        {% endfor %}
        <li><i class="fa fa-shopping-bag"></i></li>
        <li><i class="fa fa-user"></i></li>
      </ul>
    </div>
	  </nav>
</section>

