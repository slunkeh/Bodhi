{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "navigation-logo",
        "label": "Navigation Logo"
      },
      {
        "type": "url",
        "id": "logo-link",
        "label": "Logo Link"
